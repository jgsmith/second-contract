.modal.hide.fade#new-area-scene-modal(role="dialog" aria-hidden="true")
  .modal-header
    %button.close(type="button" data-dismiss="modal" aria-hidden="true") x
    %h3 New Scene
  .modal-body
    %label.control-label Name:
    .controls
      %input.input-block-level(name="id" type="text" placeholder="unique identifier for scene")/
  .modal-footer
    %button.btn(data-dismiss="modal" aria-hidden="true") Close
    %button.btn.btn-primary Create Scene
