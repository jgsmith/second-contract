.modal.hide.fade#new-verb-modal(role="dialog" aria-hidden="true")
  .modal-header
    %button.close(type="button" data-dismiss="modal" aria-hidden="true") x
    %h3 New Verb
  .modal-body
    %label.control-label Verbs:
    .controls
      %input.input-block-level(name="verbs" type="text" placeholder="comma separated list of verbs")/
  .modal-footer
    %button.btn(data-dismiss="modal" aria-hidden="true") Close
    %button.btn.btn-primary Create Verb
